vbell off
autodetach on
startup_message off

term screen-256color
defscrollback 5000
altscreen on

bind k
bind ^k
bind .
bind ^\
bind \\
bind ^h
bind h

bind 'K' kill
bind 'I' login on
bind 'O' login off
bind '}' history

register [ "\033:se noai\015a"
register ] "\033:se ai\015a"
bind ^] paste [.]

bind c screen 1
bind ^c screen 1
bind 0 select 10
screen 1

hardstatus alwayslastline "%{= k}%{g}%-w[%n %t]%+w%-=%{g}%C %a "
